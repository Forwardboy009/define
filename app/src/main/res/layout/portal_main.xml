<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main_portal_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_regular"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="2dp">

        <in.workarounds.define.view.MaxHeightScrollView
            android:id="@+id/sv_text_container"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            app:maxHeight="@dimen/bubble_card_height"
            android:layout_height="match_parent">

            <in.workarounds.define.view.swipeselect.SelectableTextView
                android:id="@+id/tv_clip_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_larger"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/black"
                app:font_variant="light"
                android:textSize="18sp" />

        </in.workarounds.define.view.MaxHeightScrollView>


        <in.workarounds.typography.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/hint_tap_to_select"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/font_smaller" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_close_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer_close"
        android:layout_alignParentBottom="true">

        <in.workarounds.typography.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/font_regular" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_meaning_pages_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fl_close_container"
        android:layout_below="@id/cv_action_card"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        android:orientation="vertical">

        <in.workarounds.define.view.slidingtabs.SlidingTabLayout
            android:id="@+id/sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_pages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>