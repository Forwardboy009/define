<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main_portal_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <in.workarounds.define.view.MaxHeightScrollView
                android:id="@+id/sv_text_container"
                android:layout_width="match_parent"
                android:scrollbarThumbVertical="@drawable/scrollbar_rounded"
                android:fadeScrollbars="false"
                android:scrollbarSize="3dp"
                app:maxHeight="@dimen/bubble_card_height"
                android:layout_height="match_parent">

                <in.workarounds.define.view.swipeselect.SelectableTextView
                    android:id="@+id/tv_clip_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:paddingTop="@dimen/padding_regular"
                    android:paddingBottom="@dimen/padding_regular"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black"
                    app:font_variant="light"
                    android:textSize="18sp" />

            </in.workarounds.define.view.MaxHeightScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lighter_gray"/>
            <include layout="@layout/layout_action_icons"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_close_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer_close"
        android:layout_alignParentBottom="true">

        <in.workarounds.typography.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/font_regular" />

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/ll_meaning_pages_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_above="@id/fl_close_container"
        android:layout_below="@id/cv_action_card"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        >

        <in.workarounds.define.view.slidingtabs.SlidingTabLayout
            android:id="@+id/sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_primary_dark" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_pages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/sliding_tab_layout"
            android:layout_alignParentBottom="true"
            />

        <View
            android:layout_below="@id/sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/shadow_bottom"
            />
    </RelativeLayout>

</RelativeLayout>