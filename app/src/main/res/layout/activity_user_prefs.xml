<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <in.workarounds.typography.TextView
        android:id="@+id/tv_pref_name_notification"
        android:text="@string/pref_name_notification"
        android:textSize="@dimen/font_medium"
        android:layout_margin="@dimen/margin_large"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_regular"
        android:paddingRight="@dimen/padding_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <in.workarounds.typography.RadioButton
            android:id="@+id/rb_option_silent"
            android:text="@string/option_silent"
            android:textSize="@dimen/font_regular"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_marginRight="@dimen/margin_regular"
            android:padding="@dimen/padding_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <in.workarounds.typography.RadioButton
            android:id="@+id/rb_option_priority"
            android:text="@string/option_priority"
            android:textSize="@dimen/font_regular"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_marginRight="@dimen/margin_regular"
            android:padding="@dimen/padding_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <in.workarounds.typography.RadioButton
            android:id="@+id/rb_option_direct"
            android:text="@string/option_direct"
            android:textSize="@dimen/font_regular"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_marginRight="@dimen/margin_regular"
            android:padding="@dimen/padding_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <in.workarounds.typography.TextView
        android:id="@+id/tv_mode_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:padding="@dimen/padding_medium"
        tools:text="@string/notify_tutorial_priority"
        />
    <in.workarounds.typography.Button
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_test"
        style="@style/ColoredButton"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/margin_large"
        android:background="@color/lighter_gray"
        />

    <in.workarounds.typography.TextView
        android:id="@+id/tv_pref_other_settings"
        android:text="@string/pref_other_settings"
        android:textSize="@dimen/font_medium"
        android:layout_margin="@dimen/margin_large"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <in.workarounds.typography.CheckBox
        android:id="@+id/notification_autocancel_checkbox"
        android:textSize="@dimen/font_regular"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:text="@string/notification_auto_hide"
        />
</LinearLayout>