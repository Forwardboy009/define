<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/livio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_regular"
        android:paddingStart="@dimen/padding_regular">

        <in.workarounds.typography.TextView
            android:id="@+id/tv_livio_title"
            app:font_variant="semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/btn_install_livio"
            android:layout_toStartOf="@id/btn_install_livio"
            android:text="@string/title_livio_dictionary"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_medium" />

        <in.workarounds.typography.TextView
            android:id="@+id/tv_livio_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_livio_title"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/btn_install_livio"
            android:layout_toStartOf="@id/btn_install_livio"
            android:text="@string/description_livio_dictionary" />

        <ImageView
            android:id="@+id/btn_install_livio"
            android:layout_width="@dimen/icon_large"
            android:layout_height="@dimen/icon_large"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/padding_medium"
            android:tint="@color/theme_accent" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@color/lighter_gray" />

</LinearLayout>